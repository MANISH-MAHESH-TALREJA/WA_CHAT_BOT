<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/dialog_round_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center"
                android:text="Add Background"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/dialog_image_round_corner"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btncamera"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:padding="5sp"
                    android:src="@drawable/ic_camera"
                    android:text="Camera"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:tint="@color/actionBarColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:text="Take Photo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layourGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/dialog_image_round_corner"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btngallery"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:padding="5sp"
                    android:src="@drawable/ic_gallery"
                    android:text="Camera"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:tint="@color/actionBarColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import Photo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>