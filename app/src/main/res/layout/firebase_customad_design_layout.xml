<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFirebaseAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/black"
            android:paddingStart="35sp"
            android:paddingTop="1sp"
            android:paddingEnd="35sp"
            android:paddingBottom="1sp"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtFirebaseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="20sp"
            android:text="Typography- photo Editor Art"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFirebaseMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:text="Typography- photo Editor Art"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="12sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10dp"
            android:gravity="end">

            <TextView
                android:id="@+id/btnFirebaseClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="CLOSE"
                android:textAllCaps="true"
                android:textColor="@color/actionBarColor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnFirebaseInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="INSTALL"
                android:textAllCaps="true"
                android:textColor="@color/actionBarColor"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>